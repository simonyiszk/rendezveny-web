{
	"name": "rendezveny-server",
	"version": "0.0.1",
	"description": "",
	"author": "",
	"private": true,
	"license": "UNLICENSED",
	"scripts": {
		"prebuild": "rimraf dist",
		"build": "nest build",
		"format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
		"start": "nest start",
		"start:dev": "DEBUG=1 nest start --watch",
		"start:debug": "DEBUG=1 nest start --debug --watch",
		"start:prod": "node dist/apps/rendezveny-server/main",
		"seed:dev": "./node_modules/.bin/ts-node -r tsconfig-paths/register apps/rendezveny-server/src/data/seed/seed-database.ts",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./apps/rendezveny-server/test/jest-e2e.json",
		"migrate:create": "cd apps/rendezveny-server && ./../../node_modules/.bin/ts-node ./../../node_modules/typeorm/cli.js migration:create -n",
		"migrate:generate": "cd apps/rendezveny-server && ./../../node_modules/.bin/ts-node ./../../node_modules/typeorm/cli.js migration:generate -n",
		"migrate:up": "cd apps/rendezveny-server && ./../../node_modules/.bin/ts-node ./../../node_modules/typeorm/cli.js migration:run",
		"migrate:down": "cd apps/rendezveny-server && ./../../node_modules/.bin/ts-node ./../../node_modules/typeorm/cli.js migration:revert"
	},
	"dependencies": {
		"@nestjs/common": "^7.5.2",
		"@nestjs/config": "^0.6.1",
		"@nestjs/core": "^7.5.2",
		"@nestjs/graphql": "^7.8.1",
		"@nestjs/jwt": "^7.2.0",
		"@nestjs/passport": "^7.1.0",
		"@nestjs/platform-express": "^7.5.2",
		"@nestjs/schedule": "^0.4.1",
		"@nestjs/typeorm": "^7.1.4",
		"apollo-server-express": "^2.19.0",
		"class-validator": "^0.12.2",
		"express-rate-limit": "^5.2.3",
		"graphql": "^15.4.0",
		"graphql-tools": "^6.2.6",
		"helmet": "^4.2.0",
		"mysql": "^2.18.1",
		"passport": "^0.4.1",
		"passport-jwt": "^4.0.0",
		"passport-local": "^1.0.0",
		"reflect-metadata": "^0.1.13",
		"rimraf": "^3.0.2",
		"rxjs": "^6.5.4",
		"typeorm": "^0.2.29",
		"typeorm-transactional-cls-hooked": "^0.1.12"
	},
	"devDependencies": {
		"@nestjs/cli": "^7.5.2",
		"@nestjs/schematics": "^7.2.1",
		"@nestjs/testing": "^7.5.2",
		"@types/express": "^4.17.9",
		"@types/express-rate-limit": "^5.1.0",
		"@types/jest": "26.0.10",
		"@types/node": "^13.13.30",
		"@types/passport-jwt": "^3.0.3",
		"@types/passport-local": "^1.0.33",
		"@types/supertest": "^2.0.8",
		"@typescript-eslint/eslint-plugin": "3.9.1",
		"@typescript-eslint/parser": "3.9.1",
		"eslint": "7.7.0",
		"eslint-config-prettier": "^6.15.0",
		"eslint-plugin-import": "^2.20.1",
		"jest": "26.4.2",
		"prettier": "^1.19.1",
		"supertest": "^4.0.2",
		"ts-jest": "26.2.0",
		"ts-loader": "^6.2.1",
		"ts-node": "9.0.0",
		"tsconfig-paths": "^3.9.0",
		"typescript": "^3.7.4"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": ".",
		"testRegex": ".spec.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"coverageDirectory": "./coverage",
		"testEnvironment": "node",
		"roots": [
			"<rootDir>/apps/"
		]
	}
}
